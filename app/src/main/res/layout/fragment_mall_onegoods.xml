<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ware_layout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:weightSum="1">


    <ImageView
        android:id="@+id/ware_picture"
        android:layout_width="122dp"
        android:layout_height="107dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ware_nametx"
        android:layout_weight="0.07"
        app:srcCompat="@android:drawable/btn_star_big_on" />


    <TextView
        android:id="@+id/ware_nametx"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ware_picture"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.19"
        android:text="火龙果升级版 "
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ware_overplus_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ware_picture"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ware_picture"
        android:text="要多少有多少"
        android:textAlignment="center" />


</RelativeLayout>