<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="1">
    <android.support.v7.widget.Toolbar
        android:id="@+id/shopping_cart_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:title="购物车呀么购物车"
        app:logo="@mipmap/ic_launcher"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
<android.support.v7.widget.RecyclerView
    android:id="@+id/shopping_cart_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <ImageButton
            android:id="@+id/all_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/xiaopaodan"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <ImageButton
            android:id="@+id/delete_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/all_checked"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/all_checked"
            app:srcCompat="@drawable/xiaopaodan" />

        <TextView
            android:id="@+id/ware_all"
            android:layout_width="130dp"
            android:layout_height="200dp"

            android:gravity="center_vertical"
            android:text="ware_all"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/submit_order" />

        <ImageButton
            android:id="@+id/submit_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher" />
    </RelativeLayout>

</LinearLayout>
